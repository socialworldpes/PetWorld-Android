<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateRouteActivity" android:orientation="vertical" android:id="@+id/layout"
        android:padding="16dp">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameInput" tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_conversion_absoluteWidth="213dp"
            tools:layout_editor_absoluteX="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Nombre"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/descriptionInput"
            tools:layout_editor_absoluteX="32dp" app:layout_constraintTop_toBottomOf="@+id/nameInput"
            android:hint="Descripción"/>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="128dp" android:id="@+id/viewPager"
            android:layout_below="@id/locationNameInput"
            tools:layout_editor_absoluteX="32dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionInput"/>
    <Button
            android:text="Subir imágenes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/uploadImagesButton"
            app:layout_constraintTop_toBottomOf="@+id/viewPager" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/locationNameInput" app:layout_constraintTop_toBottomOf="@+id/uploadImagesButton"
            tools:layout_editor_absoluteX="32dp" android:hint="Nombre del punto de salida"
            android:layout_marginTop="32dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp" tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@+id/locationNameInput" android:id="@+id/map_toolbar"
            android:layout_marginTop="8dp">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_add_circle_black_24dp"
                android:id="@+id/button_add"
                android:layout_weight="1" android:padding="0dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_edit_black_24dp"
                android:id="@+id/button_edit"
                android:layout_weight="1" android:padding="0dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_pan_tool_black_24dp"
                android:id="@+id/button_move"
                android:layout_weight="1" android:padding="0dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_delete" android:id="@+id/button_delete"
                android:layout_weight="1" android:padding="0dp"/>
    </LinearLayout>
    <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/mapCreateRoute"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/createButton" tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@+id/map_toolbar"/>
    <Button
            android:text="Crear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#4CAF50" android:textColor="#fff"
    />


</android.support.constraint.ConstraintLayout>