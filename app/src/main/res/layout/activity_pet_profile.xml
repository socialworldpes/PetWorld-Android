<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.petworld_madebysocialworld.PetProfileActivity">

   <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_width="match_parent"
            android:layout_height="56dp"/>


    <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonBorrar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewComment"
            app:layout_constraintStart_toEndOf="@+id/buttonEdit" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.062"
            app:layout_constraintHorizontal_bias="0.489"/>
    <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonEdit"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewComment" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.062"/>
    <TextView
            android:text="CommentTextView"
            android:layout_width="269dp"
            android:layout_height="85dp" android:id="@+id/textViewComment"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewRace" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.079"/>
    <TextView
            android:text="NameTextView"
            android:layout_width="267dp"
            android:layout_height="30dp" android:id="@+id/textViewName"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="RaceTextView"
            android:layout_width="267dp"
            android:layout_height="50dp" android:id="@+id/textViewRace"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSpecie" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="SpecieTextView"
            android:layout_width="267dp"
            android:layout_height="50dp" android:id="@+id/textViewSpecie"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewGender" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="GenderTextView"
            android:layout_width="267dp"
            android:layout_height="50dp" android:id="@+id/textViewGender"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="232dp"
            android:layout_height="225dp" app:srcCompat="@drawable/anabohueles"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>