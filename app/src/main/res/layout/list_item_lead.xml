<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/listPreferredItemHeight"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

    <ImageView
            android:id="@+id/route_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"/>

    <TextView
            android:id="@+id/route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:text="Nombre"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Alexander Pierrot" />

    <TextView
            android:id="@+id/route_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/route_name"
            android:layout_below="@+id/route_name"
            android:text="Cargo"
            tools:text="CEO" />

    <TextView
            android:id="@+id/route_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/route_name"
            android:layout_below="@+id/route_place"
            android:text="Compañía"
            tools:text="Blue Insurances Ltd"/>
</RelativeLayout>