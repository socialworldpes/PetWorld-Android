<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PetUpdateActivity"
        android:background="@drawable/grad">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_width="match_parent"
            android:layout_height="56dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="CommentEditText"
            android:ems="10"
            android:hint = "Comentario"
            android:id="@+id/editTextComment"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextRace" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="RaceEditText"
            android:hint="Raza"
            android:ems="10"
            android:id="@+id/editTextRace" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextSpecie" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="SpecieEditText"
            android:hint = "Especie"
            android:ems="10"
            android:id="@+id/editTextSpecie"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextGender" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:text="NameEditText"
            android:ems="10"
            android:id="@+id/editTextName" android:layout_marginTop="144dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="GenderEditText"
            android:hint = "GÃ©nero"
            android:ems="10"
            android:id="@+id/editTextGender"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Actualizar"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/buttonUpdatePet"
            app:layout_constraintTop_toBottomOf="@+id/editTextComment" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.197"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Small"
            android:background="@drawable/buttonshape" app:layout_constraintHorizontal_bias="0.498"/>

</android.support.constraint.ConstraintLayout>