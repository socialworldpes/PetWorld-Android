<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PetUpdateActivity"
        android:background="@drawable/grad">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_width="match_parent"
            android:layout_height="56dp"/>



    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="120dp"
            android:fillViewport="true"
            android:layout_below="@id/toolbar">

    <LinearLayout
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <TextView

                    android:id="@+id/headingNameUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="@color/headings"
                    android:textSize="16sp"/>
            <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Nombre"
                    android:text="NameEditText"
                    android:ems="10"
                    android:id="@+id/editTextName"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/headingGenderUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Género"
                    android:textColor="@color/headings"
                    android:textSize="16sp"/>
            <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="GenderEditText"
                    android:hint="Género"
                    android:ems="10"
                    android:id="@+id/editTextGender"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/headingSpecieUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especie"
                    android:textColor="@color/headings"
                    android:textSize="16sp" />
            <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="SpecieEditText"
                    android:hint = "Especie"
                    android:ems="10"
                    android:id="@+id/editTextSpecie"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/headingRaceUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raza"
                    android:textColor="@color/headings"
                    android:textSize="16sp" />
            <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="RaceEditText"
            android:hint="Raza"
            android:ems="10"
            android:id="@+id/editTextRace" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <TextView

                    android:id="@+id/headingCommentUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textColor="@color/headings"
                    android:textSize="16sp"/>
            <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="CommentEditText"
                    android:ems="10"
                    android:hint="Comentario"
                    android:id="@+id/editTextComment"/>
        </LinearLayout>
        <Button
            android:text="Editar"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/buttonUpdatePet"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/editTextComment"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Small"
            android:background="@drawable/buttonshape" app:layout_constraintHorizontal_bias="0.498"/>

    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>