<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateWalkActivity">
    <TextView
            android:text="Crear paseo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="632dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="65dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="269dp"/>
    <Button
            android:text="Elegir ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegirRuta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/routeSelected" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="236dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/list_item_route"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="66dp" app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="164dp" android:id="@+id/routeSelected"
             app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="444dp"
             app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="elegir hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegirHora" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="234dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textHour"/>
    <Button
            android:text="elegir fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elegirFecha" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="234dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/textDate"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/textDate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="66dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="292dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="132dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/textHour"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="66dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="168dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="132dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="crear paseo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createWalk"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="47dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="55dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="269dp"/>
</android.support.constraint.ConstraintLayout>